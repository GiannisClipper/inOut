<!DOCTYPE=html>
<html>
<head>
  <meta charset="utf-8">
  <% const page='no-index'; %>
  <% include ./parts/head.ejs %>
  <link href="/css/form.css" rel="stylesheet">

  <!--τα paths ορίζονται ως προς το /public-->
  <script type="text/javascript" src="/js/client.js" async></script> 
  <script type="text/javascript" src="/js/lib.js"></script>
</head>

<body>
  <header>
    <% include ./parts/header.ejs %>
  </header>

  <main class="login">
    <div class="container">
      <div class="login">
        <div>Όνομα χρήστη</div>
        <div><input type="text" class="name"></div>
        <div>Κωδικός εισόδου</div>
        <div><input type="password" class="password"></div>
        <input type="button" value="Είσοδος">
      </div>
    </div>
  </main>

  <footer>
    <% include ./parts/footer.ejs %>
  </footer>
  
  <script type="text/javascript">
    function login() {
      request('/users/login', {name: document.querySelector('.login .name').value, password: document.querySelector('.login .password').value})
      .then(result=> {
        if (result.error) throw result;
        removeClass(document.querySelector('main'), 'login');
        removeClass(document.querySelector('header nav'), 'login');
        removeClass(document.querySelector('footer nav'), 'login');
        document.querySelector('footer nav .right').innerHTML=document.querySelector('.login .name').value;
        document.querySelector('main').innerHTML='';
      })
      .catch(error=> alert((error.error)?error.error:error));
    }

    function init() {
      addClass(document.querySelector('header nav'), 'login');
      addClass(document.querySelector('footer nav'), 'login');
      document.querySelector('input[type="button"]').onclick=login;
      document.querySelector('.login .name').focus();
    }
 
    window.onload=()=> init();
  </script>
</body>
</html>